{
  "name": "@wal-li/ui",
  "version": "1.0.2",
  "type": "module",
  "scripts": {
    "dev": "vite --host 0.0.0.0",
    "generate:theme": "node ./scripts/generate-theme.mjs",
    "build:pre": "npm run generate:theme",
    "build": "npm run build:pre && npm run build:rollup && npm run build:tailwind && npm run build:post",
    "build:post": "node ./scripts/postbuild.mjs",
    "build:rollup": "rollup -c",
    "build:tailwind": "tailwindcss -i ./src/style.css -o ./dist/style.css"
  },
  "exports": {
    "./*": {
      "node": {
        "import": "./*/index.mjs",
        "require": "./*/index.cjs"
      },
      "default": "./*/index.mjs"
    },
    "./style.css": "./style.css"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.6",
    "@vitejs/plugin-vue": "^5.1.3",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.45",
    "rollup": "^4.21.2",
    "rollup-plugin-vue": "^6.0.0",
    "tailwindcss": "^3.4.10",
    "tslib": "^2.7.0",
    "typescript": "^5.5.4",
    "vite": "^5.4.3",
    "vue": "^3.5.2",
    "vue-router": "^4.4.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wal-li/framework.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  }
}
